<?xml version="1.0" encoding="UTF-8"?>
<campaign>
    <surveys>
        <survey>
            <id>food_habits</id>
            <title>Food Habits</title>
            <description>This survey contains questions pertaining to your food habits.</description>
            <submitText>Click on the green button to submit your data.</submitText>
            <anytime>true</anytime>
            <contentList>
                <prompt>
                    <promptType>text</promptType>
                    <id>name</id>
                    <displayLabel>Name of Snack</displayLabel>
                    <promptText>What is the name of the snack?</promptText>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>1</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>100</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <promptType>single_choice</promptType>
                    <id>when</id>
                    <displayLabel>When</displayLabel>
                    <promptText>When did you eat the snack?</promptText>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>morning</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>afternoon</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>evening</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>night</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <promptType>single_choice</promptType>
                    <id>salty_sweet</id>
                    <displayLabel>Salty or Sweet</displayLabel>
                    <promptText>Is the snack salty or sweet?</promptText>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>Salty</label>
                        </property>
                        <property>
                            <key>1</key>
                            <label>Sweet</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <promptType>number</promptType>
                    <id>healthy_level</id>
                    <displayLabel>Healthy Level</displayLabel>
                    <promptText>How healthy is the snack? (1 = Very unhealthy, 5 = Very healthy)</promptText>
                    <default>3</default>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>1</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>5</label>
                        </property>
                        <property>
                            <key>wholeNumber</key>
                            <label>true</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <promptType>number</promptType>
                    <id>calories</id>
                    <displayLabel>Calories</displayLabel>
                    <promptText>How many calories per serving?</promptText>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>2000</label>
                        </property>
                        <property>
                            <key>wholeNumber</key>
                            <label>false</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <promptType>number</promptType>
                    <id>protein</id>
                    <displayLabel>Protein</displayLabel>
                    <promptText>How many grams of protein per serving?</promptText>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>200</label>
                        </property>
                        <property>
                            <key>wholeNumber</key>
                            <label>false</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <promptType>number</promptType>
                    <id>sugar</id>
                    <displayLabel>Sugar</displayLabel>
                    <promptText>How many grams of sugar per serving?</promptText>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>500</label>
                        </property>
                        <property>
                            <key>wholeNumber</key>
                            <label>false</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <promptType>number</promptType>
                    <id>sodium</id>
                    <displayLabel>Sodium</displayLabel>
                    <promptText>How many milligrams of sodium per serving?</promptText>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>10000</label>
                        </property>
                        <property>
                            <key>wholeNumber</key>
                            <label>false</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <promptType>number</promptType>
                    <id>ingredients</id>
                    <displayLabel>No. of Ingredients</displayLabel>
                    <promptText>How many ingredients are in the snack?</promptText>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>40</label>
                        </property>
                        <property>
                            <key>wholeNumber</key>
                            <label>true</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <promptType>single_choice</promptType>
                    <id>why</id>
                    <displayLabel>Why</displayLabel>
                    <promptText>Why are you eating the snack?</promptText>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>availability</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>craving</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>emotional</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>energy</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>hungry/thirsty</label>
                        </property>
                        <property>
                            <key>6</key>
                            <label>social</label>
                        </property>
                        <property>
                            <key>7</key>
                            <label>other</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <promptType>single_choice</promptType>
                    <id>cost</id>
                    <displayLabel>Cost</displayLabel>
                    <promptText>How much does the snack cost (in dollars)?</promptText>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>$0 to &lt; $1</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>$1 to &lt; $3</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>$3 to &lt; $7</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>$7 or more</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <promptType>photo</promptType>
                    <id>snack_image</id>
                    <displayLabel>Snack Image</displayLabel>
                    <promptText>Take a picture (optional).</promptText>
                    <skippable>true</skippable>
                    <skipLabel>Skip</skipLabel>
                    <properties>
                        <property>
                            <key>maxDimension</key>
                            <label>800</label>
                        </property>
                    </properties>
                </prompt>
            </contentList>
        </survey>
    </surveys>
</campaign>
